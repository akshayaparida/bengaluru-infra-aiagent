# Copy this file to .env.local and fill in real values. Do NOT commit .env.local.

# Cerebras
CEREBRAS_API_KEY={{CEREBRAS_API_KEY}}

# Postgres (local dev uses localhost; Docker service name is postgres if you run inside a container)
DATABASE_URL=postgresql://user:password@localhost:5432/infra?schema=public

# SMTP (Mailpit)
SMTP_HOST=localhost
SMTP_PORT=1025
FROM_EMAIL=infra-agent@localhost

# Twitter/X OAuth (app keys only; user tokens will be stored locally after OAuth)
TWITTER_CONSUMER_KEY={{TWITTER_CONSUMER_KEY}}
TWITTER_CONSUMER_SECRET={{TWITTER_CONSUMER_SECRET}}

# Autopost policy
AUTOPOST_ENABLED=true
AUTOPOST_KILL_SWITCH=false
DISCLAIMER_TEXT=AI civic report from user data via bengaluru-infra-aiagent. #Bengaluru #Civic

# MCP Gateway (local)
MCP_BASE_URL=http://localhost:8008

# Local file storage for uploads (relative to repo root)
FILE_STORAGE_DIR=.data/uploads

# Feature flags (local POC)
ENABLE_EMAIL=true
ENABLE_CLASSIFICATION=true
SIMULATE_TWITTER=true

# Optional: auto-tweet after notify/classify (local POC default off)
AUTO_TWEET=false

# Base URL for internal callbacks when running server locally
APP_BASE_URL=http://localhost:3000

# Email recipient (for local Mailpit demo)
NOTIFY_TO={{recipient@example.com}}
