generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id             String       @id @default(cuid())
  createdAt      DateTime     @default(now())
  description    String
  lat            Float
  lng            Float
  photoPath      String
  status         ReportStatus @default(NEW)
  category       String?
  severity       String?
  emailMessageId String?
  emailedAt      DateTime?
  tweetId        String?
  tweetedAt      DateTime?

  @@index([createdAt])
}

enum ReportStatus {
  NEW
  TRIAGED
  NOTIFIED
}
